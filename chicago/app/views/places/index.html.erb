<style>
  h1 {
    border-bottom: solid 3px gray;
    margin-bottom: 24px;
  }
</style>

<ul>

  <%= link_to "Add a New Place","/places/new" %>
  <h2> </h2>

  <% @places.each do |place| %>
    <li>
      <%= link_to place[:title], "/places/#{place[:id]}" %>
      ($<%= place[:admission_price]/100.0 %>)
      <%= link_to "(delete)","/places/#{place[:id]}/delete" %>
    </li>
  <% end %>

</ul>